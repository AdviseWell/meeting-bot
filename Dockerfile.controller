# Meeting Bot Controller
# Python 3.11 - Creates Kubernetes Jobs to process meetings

FROM python:3.11-slim

# Install system dependencies and upgrade existing packages to fix OS-level CVEs (openssl)
RUN apt-get update && apt-get upgrade -y && apt-get install -y \
    curl \
    procps \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Upgrade pip and pin transitive deps to fix CVEs:
#   CVE-2025-8869  -> pip>=25.3
#   CVE-2026-24049 -> wheel>=0.46.2
#   CVE-2026-23949 -> jaraco-context>=6.1
RUN pip install --no-cache-dir --upgrade "pip>=25.3" "wheel>=0.46.2" "jaraco-context>=6.1"

# Copy requirements first for better caching
COPY controller/requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy controller application
COPY controller/ .

# Run as non-root user for security
RUN useradd -m -u 1000 controller && \
    chown -R controller:controller /app
USER controller

# Set Python to run in unbuffered mode for better logging
ENV PYTHONUNBUFFERED=1

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import sys; sys.exit(0)"

# Run the controller
CMD ["python", "-u", "main.py"]
